<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- System info -->
    <string name="config_sysCPUTemp">/sys/class/thermal/thermal_zone28/temp</string>
    <string name="config_sysBatteryTemp">/sys/class/power_supply/battery/temp</string>
    <string name="config_sysGPUFreq">/sys/kernel/gpu/gpu_clock</string>
    <string name="config_sysGPULoad">/sys/kernel/gpu/gpu_busy</string>
    <integer name="config_sysCPUTempMultiplier">1000</integer>
    <integer name="config_sysBatteryTempMultiplier">10</integer>

    <!-- Paths to the libraries that contain device specific key handlers -->
    <string-array name="config_deviceKeyHandlerLibs" translatable="false">
        <item>/system/priv-app/LineageParts/LineageParts.apk</item>
        <item>/system/priv-app/DeviceSettings/DeviceSettings.apk</item>
        <item>/system/priv-app/OnePlusCameraHelper/OnePlusCameraHelper.apk</item>
    </string-array>

    <!-- Names of the key handler classes -->
    <string-array name="config_deviceKeyHandlerClasses" translatable="false">
        <item>org.lineageos.lineageparts.gestures.KeyHandler</item>
        <item>org.lineageos.device.DeviceSettings.KeyHandler</item>
        <item>org.lineageos.camerahelper.KeyHandler</item>
    </string-array>

    <!-- Whether the device supports Smart Pixels -->
    <bool name="config_supportSmartPixels">true</bool>

    <!-- Whether device has physical tri state switch -->
    <bool name="config_hasAlertSlider">true</bool>

    <!-- Whether device has warp charging support -->
    <bool name="config_hasWarpCharger">true</bool>

    <!-- Path to fast charging status file to detect whether an oem fast charger is active -->
    <string name="config_oemFastChargerStatusPath" translatable="false">/sys/class/power_supply/battery/fastchg_status</string>

    <!-- Expected value from fast charging status file  -->
    <string name="config_oemFastChargerStatusValue" translatable="false">1</string>

    <!-- Smart charge sysfs node and value for suspend/resume charging-->
    <bool name="config_smartChargingAvailable">true</bool>
    <integer name="config_smartChargingBatteryLevel">90</integer>
    <integer name="config_smartChargingBatteryResumeLevel">60</integer>
    <string name="config_SmartChargingSysfsNode" translatable="false">/sys/class/power_supply/battery/input_suspend</string>
    <string name="config_SmartChargingSuspendValue" translatable="false">1</string>
    <string name="config_SmartChargingResumeValue" translatable="false">0</string>

    <!-- The location of the devices physical tri state switch
         0: Left side
         1: Right side -->
    <integer name="config_alertSliderLocation">1</integer>

    <!-- BurnIn protection. This should be enabled on devices that have OLED displays -->
    <bool name="config_enableBurnInProtection">true</bool>

    <!-- Battery Health -->
    <bool name="config_supportBatteryHealth">true</bool>
    <string name="config_batChargeCycle">/sys/class/power_supply/bms/cycle_count</string>
    <string name="config_batDesCap">/sys/class/power_supply/bms/charge_full_design</string>
    <string name="config_batCurCap">/sys/class/power_supply/bms/charge_full</string>

    <!-- Defines the sysfs attribute path used by the device
         to enable/disable DC dimming. -->
    <string name="config_deviceDcDimmingSysfsNode">/sys/class/drm/card0-DSI-1/dimlayer_bl_en</string>

    <!-- Default fod pressed icon -->
    <integer name="config_pressed_fod_icon">3</integer>

    <bool name="config_powermenuadvanceddefault">true</bool>

    <!-- Whether device supports variable refresh rate -->
    <bool name="config_hasVariableRefreshRate">true</bool>
    <integer name="config_defaultVariableRefreshRateSetting">2</integer>

    <!-- OnePlus uses a proprietary vibrator hal to utilize the new powerful motor since the
         OnePlus 7 Pro. This HAL expects a different format for the data instead of the usual (ms)
         timing(the duration which the vibrator is expected to vibrate for). -->
    <bool name="config_hasOnePlusHapticMotor">true</bool>
</resources>
